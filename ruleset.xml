<?xml version="1.0"?>
<ruleset name="Booking room Coding Standard">
    <description>Coding Standard for booking room.</description>
    <arg name="colors"/>
    <arg value="sp"/>
    <arg value="q"/>
    <arg value="n"/>

    <file>./app</file>
    <file>./config</file>
    <file>./database</file>
    <file>./routes</file>
    <file>./tests</file>
    <file>./resources/views</file>
    <file>./resources/lang</file>

    <rule ref="PSR2">
        <exclude name="PSR1.Methods.CamelCapsMethodName"/>
        <exclude name="PSR2.Namespaces.NamespaceDeclaration" />
        <exclude name="PSR2.Classes.PropertyDeclaration" />
        <exclude name="PSR1.Classes.ClassDeclaration" />
    </rule>
</ruleset>